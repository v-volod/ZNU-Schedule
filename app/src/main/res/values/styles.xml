<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/yellow_600</item>
        <item name="colorAccentDark">@color/yellow_700</item>
        <item name="android:windowBackground">@color/white</item>

        <!-- Material Dialog colors -->
        <item name="md_positive_color">?attr/colorPrimary</item>
        <item name="md_neutral_color">?attr/colorPrimary</item>
        <item name="md_negative_color">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <!-- Login Screen Style -->
    <style name="LoginScreen" parent="AppTheme.Base"/>

    <!-- NoDrawer Theme -->
    <style name="NoDrawerTheme" parent="AppTheme"/>

    <!-- Purple Theme -->
    <style name="AppTheme.Purple" parent="AppTheme.Base">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/blue_500</item>
        <item name="colorAccentDark">@color/blue_700</item>
    </style>

    <!-- AppTextLogo -->
    <style name="AppTextLogo">
        <item name="android:textSize">@dimen/app_text_logo_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TagLine -->
    <style name="TagLineText">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:textColor">@color/white_opacity</item>
    </style>

    <style name="TagLine" parent="TagLineText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tag_line_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/tag_line_margin_bottom</item>
    </style>

    <style name="TagLineChooser">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:textColorHint">@color/white_opacity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- LoginChooser -->
    <style name="LoginChooser">
        <item name="android:layout_marginBottom">@dimen/login_chooser_margin_bottom</item>
    </style>

    <!-- Extended toolbar styles -->
    <style name="TwoLineTitle">
        <item name="android:singleLine">false</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="android:state_multiline">true</item>
        <item name="android:minLines">2</item>
    </style>

</resources>
