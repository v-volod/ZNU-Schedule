<resources>

    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->

    </style>

    <!-- Login Screen Styles -->
    <style name="LoginScreen" parent="AppTheme.Base">
        <item name="android:textViewStyle">@style/LoginTextViewStyle</item>
    </style>

    <style name="LoginTextViewStyle" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- AppTextLogo -->
    <style name="AppTextLogo">
        <item name="android:textSize">@dimen/app_text_logo_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- TagLine -->
    <style name="TagLineText">
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:textColor">@color/white_opacity</item>
    </style>

    <style name="TagLine" parent="TagLineText">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/tag_line_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/tag_line_margin_bottom</item>
    </style>

    <style name="TagLineChooser">
        <item name="android:singleLine">true</item>
        <item name="android:textSize">@dimen/text_size_subhead_material</item>
        <item name="android:textColorHint">@color/white_opacity</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:ellipsize">end</item>
    </style>

    <!-- LoginChooser -->
    <style name="LoginChooser">
        <item name="android:layout_marginBottom">@dimen/login_chooser_margin_bottom</item>
    </style>

</resources>
